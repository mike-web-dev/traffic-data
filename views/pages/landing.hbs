{{#section 'header'}}
    <style>

        body {
            background: url(/img/stock/rain.jpg) no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        main {
            background-color: rgba(0,0,0,0.65);
        }

        .contentContainer {
            display: flex;
            align-items: center;
            align-content: center;
            height: 100%;
            margin: auto;
        }

        .content h1 {
            font-size: 4rem;
            font-weight: 700;
        }

        @media only screen and (max-width: 992px) {
            .content {
                max-width: 90%;
                margin: auto;
            }
            .content h1 {
                font-size: 3rem;
            }
        }

        @media only screen and (max-width: 576px) {
            .content h1 {
                font-size: 2rem;
            }
        }

        .gitLink {
            position: fixed;
            left: 0;
            right: 0;
            bottom: 0;
        }
    </style>
{{/section}}

<div class="contentContainer">
    <div class="content text-center">
        <h1 class="text-white text-uppercase">Traffic Data Visualisation</h1>
        <hr class="border-white mb-4">
        <h4 class="text-white mb-4">
            An experiment using
            <a class="text-info text-decoration-none" href="https://roadtraffic-docs.dft.gov.uk/#api">Road Traffic Open Data</a>,
            <a class="text-info text-decoration-none" href="https://www.mapbox.com/">mapbox</a>
            &
            <a class="text-info text-decoration-none" href="https://d3js.org/">D3.js</a>
        </h4>
        <a href="/home" class="btn btn-primary btn-lg" role="button" aria-pressed="true">Get Started</a>
    </div>
</div>

<p class="gitLink text-white text-center mb-1">
    <small>View code on <a class="text-decoration-none" href="{{gitUrl}}">Github</a></small>
</p>


